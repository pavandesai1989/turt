https://leetcode.com/problems/container-with-most-water/description/  

***brute force ****
we need left and right to make container and to find max area 
try all possible values 

class Solution {
  public:
    int maxWater(vector<int> &arr) 
    {
        int n=arr.size();
        int maxArea = INT_MIN;
        for(int i=0;i<n;i++)
        {
            for(int j=i+1;j<n;j++)
            {
                int width = j-i;
                int height = min(arr[i],arr[j]);
                maxArea = max(maxArea,width*height);
            }
        }
        
        return maxArea;
    }
};

***optimal 2 pointer***
class Solution {
public:
    int maxArea(vector<int>& arr) 
    {
        int maxArea = INT_MIN;
        int n=arr.size();
        int l=0;
        int r=n-1;
        
        while(l<r)
        {
            int width = r-l;
            int height = min(arr[l],arr[r]);
            
            maxArea = max(maxArea,width*height);
            
            if(arr[l]<arr[r]) //we are reducing the width, so to get max area we need larger height,eliminate min height
            {
                l++;
            }
            else
            {
                r--;
            }
        }
        return maxArea;
    }
};


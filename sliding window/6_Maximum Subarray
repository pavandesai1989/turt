https://leetcode.com/problems/maximum-subarray/description/

class Solution {
public:
    int maxSubArray(vector<int>& nums) 
    {
        int maxSum = INT_MIN;
        int currSum = 0;

        //main point: if maxSum is -ve reset to 0.

        for(int i=0;i<nums.size();++i)
        {
            currSum += nums[i];

            //update max sum
            maxSum = max(maxSum,currSum);

            //if currSum is less than 0 reset
            if(currSum<0)
            {
                currSum = 0;
            }
        }
        return maxSum;
    }
};

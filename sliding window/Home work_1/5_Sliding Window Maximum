//https://leetcode.com/problems/sliding-window-maximum/



class Solution {
public:
    vector<int> maxSlidingWindow(vector<int>& nums, int k) 
    {
        //we need to store index in the deque. why ? to calculate which ele is not in curr window
        //use monotonic decreasing order : front will be highest value
        vector<int> res;
        deque<int> dq; // stores indices
        int n = nums.size();

        if (n == 0 || k == 0) return res;

        // Compute for 1st window
        for (int i = 0; i < k; ++i)
        {
            // Remove elements smaller than current as they cannot be part of res any time
            while (!dq.empty() && nums[i] >= nums[dq.back()])
            {
                dq.pop_back();
            }
            dq.push_back(i);
        }

        // Max of first window
        res.push_back(nums[dq.front()]);

        // Process remaining windows
        for (int i = k; i < n; ++i)
        {
            // Remove indices which are out of current window ******
            while (!dq.empty() && dq.front() <= i - k)
            {
                dq.pop_front();
            }

            // Remove elements smaller than current as they cannot be part of res any time
            while (!dq.empty() && nums[i] >= nums[dq.back()])
            {
                dq.pop_back();
            }

            dq.push_back(i);

            // Add current window max
            res.push_back(nums[dq.front()]);
        }

        return res;
    }
};

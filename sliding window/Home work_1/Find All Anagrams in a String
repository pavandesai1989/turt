https://leetcode.com/problems/find-all-anagrams-in-a-string/description/

same concept as prev prob

class Solution {
public:
    bool checkallzeros(unordered_map<char,int>& mpp)
    {
        for(auto ele:mpp)
        {
            if(ele.second !=0)
            {
                return false;
            }
        }
        return true;
    }

    vector<int> findAnagrams(string s, string p) 
    {
        vector<int> res;
        int lp=p.length();
        int ls=s.length();
        
        //store char of ele of pat in map
        unordered_map<char,int> mpp;
        for(auto ele:p) mpp[ele]++;
        
        int i=0,j=0;
        while(j<ls)
        {
          //reduce char cnt in mp indicating we got char 
          mpp[s[j]]--;
          
          //check for len
          if(j-i+1 == lp)
          {
              if(checkallzeros(mpp))
              {
                  res.push_back(i);
              }
              
              //add back freq
              mpp[s[i]]++;
              
              i++;
          }
          j++;
        }
        return res;
    }
};

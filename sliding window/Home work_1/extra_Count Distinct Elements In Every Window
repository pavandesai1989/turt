//https://www.naukri.com/code360/problems/count-distinct-elements-in-every-window_980530?leftPanelTabValue=PROBLEM
#include <bits/stdc++.h> 
vector<int> countDistinct(vector<int> &arr, int n, int k) 
{
 	vector<int> res;
	unordered_map<int,int> mp;
	int i=0, j=0;

	while(j<n)
	{
		//add to map
		mp[arr[j]]++;

		//when len is k
		if(j-i+1 == k)
		{
            //update result
			res.push_back(mp.size());

			//reduce freq of ele at i
			mp[arr[i]]--;
			if(mp[arr[i]] == 0)
			{
				mp.erase(arr[i]);
			}
			i++;
		}
		j++;
	}
	return res;
}

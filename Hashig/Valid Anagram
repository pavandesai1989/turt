//https://leetcode.com/problems/valid-anagram/description/?envType=study-plan-v2&envId=top-interview-150


*******sorting*******
class Solution {
public:
    bool isAnagram(string s, string t) 
    {
        if(s.size() != t.size()) return false;
        sort(s.begin(),s.end());
        sort(t.begin(),t.end());

        return s==t;
    }
};


Time: O(n log n)
space : o(1) depends on sorting algo 
Space: O(log n) due to recursion stack of std::sort

***************

class Solution {
public:
/*
Count s: O(len_s)

Count t: O(len_t)

Check freq array: O(26) = O(1)
*/
    bool isAnagram(string s, string t) 
    {
        vector<int> freq(26,0);
        for(auto& chr:s) //o(lens)
        {
           freq[chr-'a']++;
        }

        //iterate over t
        for(auto& chr:t) //o(lent)
        {
            freq[chr-'a']--;
        }

        //freq count should 0
        for(int i=0;i<26;i++)
        {
           if(freq[i] !=0 )
           {
            return false;
           }
        }
        return true;
    }
};

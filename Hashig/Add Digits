https://leetcode.com/problems/add-digits/description/

class Solution {
public:
    int addDigits(int num) 
    {
       if(num==0) return 0;
       while(true)
        {
            if(num/10 == 0) return num;
            int sum=0;
            while(num!=0)
            {
              int digit = num%10;
              sum += digit;
              num = num/10;
            }

            //sum will be num now
            num=sum;
        }
        
    }
};

//https://leetcode.com/problems/middle-of-the-linked-list/description/

class Solution {
public:
    ListNode* middleNode(ListNode* head) 
    {
        int n=0;
        ListNode* curr=head;
        while(curr)
        {
            curr = curr->next;
            n++;
        }

        n = n/2;
        curr = head;
        while(n)
        {
            n--;
            curr = curr->next;
        }
        return curr;
    }
};


class Solution {
public:
    ListNode* middleNode(ListNode* head) 
    {
        ListNode* slow = head;
        ListNode* fast = head;

        while(fast!=nullptr && fast->next!=nullptr)
        {
            slow = slow->next;
            fast = fast->next->next;
        }
        return slow;
    }
};

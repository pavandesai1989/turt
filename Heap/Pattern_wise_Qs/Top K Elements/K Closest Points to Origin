//https://leetcode.com/problems/k-closest-points-to-origin/description/

class Solution {
public:
    vector<vector<int>> kClosest(vector<vector<int>>& points, int k) 
    {        
        //closest points means min dist from origin implies min values
        //we need only k elements better use max heap os size k

        priority_queue< pair < double,pair< int,int> > > maxheap;

        for(auto& ele:points)
        {
            int x = ele[0];
            int y = ele[1];

            double sqrtval = sqrt(x*x + y*y);
            maxheap.push({sqrtval,{x,y}});

            if(maxheap.size() > k) maxheap.pop();
        }

        vector<vector<int>> res(k);
        int idx = k-1;
        while(!maxheap.empty())
        {
            res[idx--] = {maxheap.top().second.first,maxheap.top().second.second};
            maxheap.pop();
        }
        return res;
    }
};

https://leetcode.com/problems/combination-sum-ii/description/

class Solution {
public:
    void helper(vector<int>& nums,int idx,vector<int>& op,int target,vector<vector<int>>& res)
    {
       //base case
       if(idx == nums.size())
       {
        if(target == 0)
        {
            res.push_back(op);
        }
        return;
       }

       //each ele can be taken once
       if(nums[idx]<=target)
       {
          op.push_back(nums[idx]);
          //call on next idx
          helper(nums,idx+1,op,target-nums[idx],res);
          //back track
          op.pop_back();
       }
       //handle duplicates
       while(idx+1<nums.size() && nums[idx]==nums[idx+1])
       {
        idx++;
       }

       //exclude case
       helper(nums,idx+1,op,target,res);
    }
    vector<vector<int>> combinationSum2(vector<int>& candidates, int target) 
    {
        vector<vector<int>> res;
        vector<int> op;

        sort(candidates.begin(),candidates.end());

        helper(candidates,0,op,target,res);
        return res;
        
    }
};

Time : O(nlogn+n×2n)​

Space : O(n×2n)​



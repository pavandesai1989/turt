https://leetcode.com/problems/arranging-coins/description/

class Solution {
public:
    int arrangeCoins(int n) 
    {
        long long left = 1, right = n;

        while (left <= right)
        {
            long long mid = left + (right - left) / 2;
            long long coins = mid * (mid + 1) / 2;

            if (coins == n)
                return mid;
            else if (coins > n)
                right = mid - 1;
            else
                left = mid + 1;
        }

        return right;  // last valid row count
    }
};


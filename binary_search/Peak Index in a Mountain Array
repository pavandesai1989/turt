https://leetcode.com/problems/peak-index-in-a-mountain-array/description/

class Solution {
public:
    int peakIndexInMountainArray(vector<int>& arr) 
    {
        int n=arr.size();

        //0 and n-1 cannot be answer to form peak
        int l=1,r=n-2;

        while(l<=r)
        {
            int mid=(r-l)/2+l;

            //condition for peak ele
            if(arr[mid-1]<arr[mid] && arr[mid] > arr[mid+1])
            {
                return mid;
            }
            else if(arr[mid-1]<arr[mid]) //its on increasing line 
            {
               l = mid+1;//peak is towards decreasing line
            }
            else //move up towards peak
            {
                r = mid-1;
            }
        }
        return -1;
    }
};
